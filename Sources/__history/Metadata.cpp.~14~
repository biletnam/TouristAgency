// ---------------------------------------------------------------------------

#pragma hdrstop

#include "Metadata.h"

// ---------------------------------------------------------------------------

#pragma package(smart_init)

const DBMetadata Mdata;

// ---------------------------------------------------------------------------
DBMetadata::DBMetadata() {

	// Добавление справочников

	AddTable("Клиенты");
	AddColumn("ФИО", "Ф.И.О");

	AddTable("Страны");
	AddColumn("Название", "Название");

	AddTable("Туры");
	AddColumn("Назначение", "Назначение");
	AddKey("Страна", "Страна", "Название", "Страны", "Код");

	AddTable("Путёвки");
	AddKey("Тур", "Тур", "Назначение", "Туры", "Код");
	AddKey("Клиент", "Клиент", "ФИО", "Клиенты", "Код");
	AddColumn("Цена", "Цена");

	// Добавление отчетов

	AddReport("Статистика");
	AddColumn("Наименование", "Наименование");
	AddColumn("Количество", "Количество");

	AddReport("Продажи");
	AddColumn("Дата", "Дата");
	AddColumn("Продажи", "Продажи");
}
// ---------------------------------------------------------------------------
